{
  "workspaces": [
    "Packages/*"
  ],
  "private": true,
  "scripts": {
    "start": "tasks/cli/index.js"
  },
  "devDependencies": {
    "@auto/changelog": "^0.1.3",
    "@auto/commit-prompt": "^0.1.2",
    "@auto/core": "^0.1.6",
    "@auto/github": "^0.1.2",
    "@auto/slack": "^0.1.2",
    "@auto/tag": "^0.1.1",
    "@auto/telegram": "^0.1.2",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@nextools/eslint-config": "^0.1.2",
    "@nextools/typescript-config": "^0.1.0",
    "@start/plugin": "^1.0.0",
    "@start/plugin-copy": "^1.0.0",
    "@start/plugin-find": "^1.0.0",
    "@start/plugin-sequence": "^1.0.0",
    "@start/reporter-verbose": "^1.0.2",
    "@types/node-fetch": "^2.5.7",
    "@types/puppeteer-core": "^2.0.0",
    "@types/xml2js": "^0.4.5",
    "chalk": "^4.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "execa": "^4.0.0",
    "figures": "^3.2.0",
    "node-fetch": "^3.1.1",
    "pifs": "^1.0.0",
    "puppeteer-core": "^2.1.1",
    "tsfn": "^1.1.2",
    "typeon": "^1.0.0",
    "typescript": "^3.8.3",
    "xml2js": "^0.4.23"
  },
  "start": {
    "file": "tasks/",
    "auto": {
      "shouldMakeGitTags": true,
      "shouldWriteChangelogFiles": true
    }
  },
  "auto": {
    "npm": {
      "publishSubDirectory": "build",
      "access": "public"
    },
    "prefixes": {
      "major": "💥",
      "minor": "🌱",
      "patch": "🐞",
      "publish": "📦",
      "dependencies": "♻️",
      "initial": "🐣",
      "lint": "🚷",
      "test": "👾",
      "docs": "📝",
      "refactor": "🛠",
      "wip": "🚧",
      "screenshots": "📸"
    },
    "commit": {
      "major": "Breaking Change",
      "minor": "New feature",
      "patch": "Bugfix",
      "initial": "Initial",
      "depepdencies": "Dependencies",
      "lint": "Lint",
      "test": "Test",
      "docs": "Docs",
      "refactor": "Refactor",
      "wip": "WIP",
      "screenshots": "Snapshots / Screenshots"
    }
  },
  "eslintConfig": {
    "extends": "@nextools/eslint-config"
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ]
}
